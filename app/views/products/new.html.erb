<%= form_with scope: :product, url: products_path, local: true do |form| %>
  <%= form.hidden_field :store_id %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </div>
 
  <div>
    <%= form.label :category %><br>
    <%= form.text_field :category %>
  </div>
 
  <div>
    <%= form.label :price %><br>
    <%= form.number_field :price %>
  </div>

  <div>
    <%= form.submit 'Submit' %>
  </div>
<% end %>